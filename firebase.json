{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "lib"
    ],
    "predeploy": [
      "pnpm --filter @online-chat/functions run build"
    ]
  },
  "hosting": [
    {
      "target": "web",
      "source": "apps/web",
      "frameworksBackend": {
        "framework": "nextjs"
      },
      "predeploy": [
        "cd apps/web && pnpm install && pnpm run build"
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "hosting": {
      "port": 5173
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}


